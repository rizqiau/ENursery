<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.enursery.presentation.home.HomeFragment"
        android:label="@string/home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/navigation_vgm"
        android:name="com.example.enursery.presentation.vgm.VgmFragment"
        android:label="fragment_vgm"
        tools:layout="@layout/fragment_vgm" />
    <fragment
        android:id="@+id/navigation_plot"
        android:name="com.example.enursery.presentation.plot.PlotFragment"
        android:label="fragment_plot"
        tools:layout="@layout/fragment_plot" />
    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.enursery.presentation.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/navigation_register"
        android:name="com.example.enursery.presentation.auth.RegisterFragment"
        android:label="Register" >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/navigation_login" />
    </fragment>

    <fragment
        android:id="@+id/navigation_login"
        android:name="com.example.enursery.presentation.auth.LoginFragment"
        android:label="Login">
        <action
            android:id="@+id/action_loginFragment_to_homeFragment"
            app:destination="@id/navigation_home" />
    </fragment>

</navigation>