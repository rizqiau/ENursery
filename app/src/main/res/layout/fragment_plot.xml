<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.plot.PlotFragment"
    android:background="?android:colorBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Map Section -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="420dp">

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/mapContainer"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageButton
                android:id="@+id/btnMyLocation"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_margin="16dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_gps_on"
                android:contentDescription="Lokasi Saya"
                android:elevation="4dp" />

            <ImageButton
                android:id="@+id/btnStyleMap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="72dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_map_style"
                android:contentDescription="Ganti Tampilan Map"
                android:elevation="4dp" />

            <LinearLayout
                android:id="@+id/locationOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|end"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:background="@drawable/bg_overlay_gps"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvAccuracy"
                    android:text="Accuracy : -"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/GpsOverlayText"/>
                <TextView
                    android:id="@+id/tvLatitude"
                    android:text="Latitude : -"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/GpsOverlayText"/>
                <TextView
                    android:id="@+id/tvLongitude"
                    android:text="Longitude : -"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    style="@style/GpsOverlayText"/>
            </LinearLayout>
        </FrameLayout>

        <!-- Scrollable Bottom Content -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:background="?attr/colorSurface">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <!-- Kontainer utama konten plot -->
                        <LinearLayout
                            android:id="@+id/plotContent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Plot Name & Navigation -->
                            <LinearLayout
                                android:id="@+id/plotContainer"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">

                                <ImageButton
                                    android:id="@+id/ibBack"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_back"
                                    android:contentDescription="Previous"
                                    android:background="?selectableItemBackgroundBorderless"
                                    app:tint="@color/textColorPrimary" />

                                <TextView
                                    android:id="@+id/plotName"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="PLOT A"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/textColorPrimary"
                                    android:layout_marginHorizontal="16dp" />

                                <ImageButton
                                    android:id="@+id/ibNext"
                                    android:layout_width="48dp"
                                    android:layout_height="48dp"
                                    android:src="@drawable/ic_next"
                                    android:contentDescription="Next"
                                    android:background="?selectableItemBackgroundBorderless"
                                    app:tint="@color/textColorPrimary" />
                            </LinearLayout>

                            <!-- Data Details -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginTop="12dp">

                                <!-- Labels -->
                                <LinearLayout
                                    android:id="@+id/tvJudulData"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_marginEnd="12dp">

                                    <TextView
                                        android:text="@string/luar_area"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                    <TextView
                                        android:text="@string/tanggal_tanam"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                    <TextView
                                        android:text="@string/tanggal_transplanting"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                    <TextView
                                        android:text="@string/varietas"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                    <TextView
                                        android:text="@string/jumlah_bibit"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                    <TextView
                                        android:text="@string/jumlah_vgm"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/textColorPrimary"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvLuasArea"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvTanggalTanam"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvTanggalTransplanting"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvVarietas"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvJumlahBibit"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                    <TextView
                                        android:id="@+id/tvJumlahVgm"
                                        android:layout_height="wrap_content"
                                        android:layout_width="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Overlay jika tidak ada data -->
                        <TextView
                            android:id="@+id/tvEmptyPlot"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Belum ada plot yang tersedia"
                            android:textColor="@color/textColorPrimary"
                            android:textSize="16sp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:padding="16dp"
                            android:background="@android:color/transparent"/>
                    </FrameLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
