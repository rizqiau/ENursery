<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Gradient Background Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_profile_gradient"
            android:padding="16dp">

            <!-- Card Profil -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="8dp"
                    android:paddingHorizontal="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivFoto"
                            android:layout_width="90dp"
                            android:layout_height="90dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/Circular"
                            android:layout_marginEnd="12dp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvNama"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Adel"
                                android:textStyle="bold"
                                android:textSize="18sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginTop="6dp">

                                <TextView
                                    android:id="@+id/tvId"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="6dp"
                                    android:text="P0001" />

                                <TextView
                                    android:id="@+id/tvRole"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Asisten Kebun"/>

                            </LinearLayout>
                            <com.google.android.material.chip.Chip
                                android:id="@+id/chipWilayah"
                                style="@style/Widget.MaterialComponents.Chip.Choice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Brahma Binabakti"
                                android:textStyle="bold"
                                android:textAppearance="@style/TextAppearance.AppCompat"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Progress Plot"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="10dp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvPlotProgress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingStart="4dp"
                android:paddingEnd="4dp" />

            <TextView
                android:id="@+id/tvEmptyPlot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Belum ada plot yang tersedia"
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"
                android:visibility="gone"
                android:layout_gravity="center"
                android:padding="16dp"
                android:background="@android:color/transparent"/>

        </FrameLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/transparent"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Grafik -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š Kinerja Input Harian"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="8dp" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="24dp">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tvEmptyChartOverlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Belum ada input VGM"
                android:textSize="16sp"
                android:textColor="@color/textColorPrimary"
                android:background="@android:color/transparent"
                android:visibility="gone"
                android:padding="12dp"
                android:textAlignment="center" />
        </FrameLayout>

        <!-- Tombol Logout -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="32dp"
            android:text="LOGOUT"
            app:cornerRadius="12dp"
            android:textAllCaps="true"
            app:backgroundTint="@color/main"
            app:icon="@drawable/ic_logout"
            app:iconPadding="8dp"
            app:iconGravity="textStart" />
    </LinearLayout>
</ScrollView>
