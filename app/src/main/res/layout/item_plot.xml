<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header dengan Label Warna -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvNamaPlot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="@string/plot"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:background="@drawable/bg_label"
                android:layout_marginBottom="8dp"/>
        </LinearLayout>

        <!-- Detail Plot -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/luar_area"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvLuasArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4,5 Ha"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah_bibit"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvJumlahBibit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="25.528"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vgm"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tvJumlahVgm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1208"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="4dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
