<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/bg_light">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/vgm_input"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@color/main"
            android:gravity="center"
            android:padding="12dp" />

        <!-- Measure -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/measure"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <!-- BibitId (Hasil Scan) -->
        <TextView
            android:id="@+id/tvBibitId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/id_bibit"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginBottom="12dp"/>

        <!-- Tinggi Tanaman -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tinggi_tanaman"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etTinggiTanaman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/masukkan_tinggi_tanaman"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Diameter Batang -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/diameter_batang"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etDiameterBatang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/masukkan_diameter_batang"
            android:inputType="numberDecimal"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Jumlah Daun -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/jumlah_daun"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/etJumlahDaun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/masukkan_jumlah_daun"
            android:inputType="number"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginBottom="12dp"/>

        <!-- Foto Bibit -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/foto_bibit"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imgFotoBibit"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/ic_gallery"
            android:scaleType="centerInside"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="12dp"/>

        <Button
            android:id="@+id/btnSimpan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/simpan"
            android:backgroundTint="@color/main"
            android:textColor="@color/white"
            android:padding="12dp"/>
    </LinearLayout>
</ScrollView>
