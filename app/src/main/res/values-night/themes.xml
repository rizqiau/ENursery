<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ENursery" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Warna utama aplikasi -->
        <item name="colorPrimary">@color/main</item>
        <item name="colorPrimaryVariant">@color/main</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/main</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <!-- Warna background utama -->
        <item name="android:colorBackground">@color/bg_color</item>
        <item name="android:statusBarColor">@color/bg_color</item> <!-- atau colorPrimary -->
        <item name="android:windowLightStatusBar">false</item> <!-- icon status bar jadi gelap -->


        <!-- Warna yang digunakan di BottomNavigationView -->
        <item name="colorSurface">@color/my_bottom_nav_bg</item>
        <item name="colorOnSurface">@color/my_bottom_nav_icon</item>
    </style>

    <style name="Theme.ENursery" parent="Base.Theme.ENursery" />

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/main</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ENursery</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="ThemeMaterialCalendar" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="android:windowFullscreen">false</item>
    </style>
</resources>
